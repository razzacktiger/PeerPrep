{
  "expo": {
    "name": "PeerPrep",
    "slug": "PeerPrep",
    "scheme": "my-peerpreps",
    "version": "1.0.0",
    "orientation": "portrait", 
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "web": {
    "bundler": "metro"
    },
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"],
        "NSPhotoLibraryUsageDescription": "PeerPrep needs access to your photo library to let you upload a profile picture.",
        "NSCameraUsageDescription": "PeerPrep needs access to your camera to let you take a profile picture."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "READ_MEDIA_IMAGES",
        "CAMERA"
      ],
      "useNextNotificationsApi": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366F1",
          "sounds": [
            "./assets/notification-sound.wav"
          ]
        }
      ]
    ]
  }
}
